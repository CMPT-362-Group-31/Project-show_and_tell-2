<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textTotalCrew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Crew Worksheets: 0"
        android:textSize="18sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/textTotalPackage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Package Worksheets: 0"
        android:textSize="18sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/textActiveDrivers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Active Drivers: 0"
        android:textSize="18sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/textCompletedWorksheets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Completed Worksheets: 0"
        android:textSize="18sp"
        android:padding="8dp" />

</LinearLayout>
